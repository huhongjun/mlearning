<?xml version="1.0" encoding="utf-8"?>
<com.zj.learning.view.forum.PostsItemView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/posts_tag_tv"
        android:layout_width="35dip"
        android:layout_height="35dip"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/margin_16"
        android:background="@drawable/posts_item_tag_bg"
        android:gravity="center" />

    <RelativeLayout
        android:id="@+id/rl_posts_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/posts_tag_tv" >

        <TextView
            android:id="@+id/posts_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:textColor="@color/posts_item_first_color" />

        <LinearLayout
            android:id="@+id/ll_posts_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/posts_name_tv"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/posts_username_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/posts_item_second_color" />

            <TextView
                android:id="@+id/posts_commentnum_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_8"
                android:textColor="@color/posts_item_second_color" />

            <TextView
                android:id="@+id/posts_likenum_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_8"
                android:textColor="@color/posts_item_second_color" />
        </LinearLayout>
    </RelativeLayout>

</com.zj.learning.view.forum.PostsItemView>