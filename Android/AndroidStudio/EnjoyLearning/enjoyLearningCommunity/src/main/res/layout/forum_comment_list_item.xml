<?xml version="1.0" encoding="utf-8"?>
<com.zj.learning.view.forum.CommentItemView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:id="@+id/comment_list_item_rl_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_16"
        android:layout_marginRight="@dimen/margin_16"
        layout="@layout/user_show" />

    <TextView
        android:id="@+id/comment_content_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/comment_list_item_rl_user"
        android:layout_marginLeft="@dimen/margin_16" />

</com.zj.learning.view.forum.CommentItemView>