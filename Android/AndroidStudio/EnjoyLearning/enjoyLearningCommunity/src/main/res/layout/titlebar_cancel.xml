<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/titleLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_color"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/titlebar_back_tv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/title_tv_bg_selector"
        android:clickable="true"
        android:gravity="center_vertical"
        android:onClick="onBtnBackClick"
        android:padding="@dimen/margin_8"
        android:text="@string/cancel"
        android:textColor="@color/titlebar_tv_selector"
        android:textSize="@dimen/title_tv_level" />

    <TextView
        android:id="@+id/titlebar_back_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/margin_5"
        android:layout_toLeftOf="@+id/titlebar_back_tv_right"
        android:layout_toRightOf="@+id/titlebar_back_tv_back"
        android:ellipsize="middle"
        android:gravity="center_horizontal"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textSize="@dimen/title_tv_level" />

    <TextView
        android:id="@+id/titlebar_back_tv_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/title_tv_bg_selector"
        android:clickable="true"
        android:onClick="onClickRightBtn"
        android:padding="@dimen/margin_8"
        android:singleLine="true"
        android:textColor="@color/titlebar_tv_selector"
        android:textSize="@dimen/title_tv_level" 
        android:visibility="gone"/>

</RelativeLayout>