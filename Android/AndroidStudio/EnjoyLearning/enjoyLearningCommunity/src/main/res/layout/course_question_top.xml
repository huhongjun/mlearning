<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/course_exam_top_rl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/course_exam_titlebar_bg" >

        <TextView
            android:id="@+id/course_exam_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/course_exam_tv_count"
            android:gravity="center_vertical"
            android:padding="@dimen/margin_8"
            android:textColor="@color/detail_black_color"
            android:textSize="@dimen/title_tv_level" />

        <TextView
            android:id="@+id/course_exam_tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_8"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="1/5"
            android:textColor="@color/detail_black_color"
            android:textSize="@dimen/title_tv_level" />
    </RelativeLayout>

    <!-- 题目 -->

    <TextView
        android:id="@+id/course_exam_tv_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/course_exam_top_rl_title"
        android:layout_marginLeft="@dimen/margin_16"
        android:layout_marginRight="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_16"
        android:text="心理现象分为（）"
        android:textColor="@color/detail_black_color"
        android:textSize="@dimen/list_first_level" />

</RelativeLayout>